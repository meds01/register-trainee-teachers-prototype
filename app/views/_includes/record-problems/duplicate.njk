
{% set otherTraineeUrl = "#" %}

{% for trainee in problem.trainees %}
  {{trainee | log}}
  {% if  trainee != record.id %}
    {% set otherTraineeUrl = "/record/" + trainee %}
  {% endif %}
{% endfor %}

{% if record | isDraft %}
  <p class="govuk-body">
    This draft trainee has the same details as <a href="{{otherTraineeUrl}}" class="govuk-link" rel="noreferrer noopener" target="_blank">{{record | getShortName}} (opens in a new tab)</a>.
  </p>

  <p class="govuk-body">
    You should withdraw or delete one trainee. Email us if the draft trainee is not a duplicate.
  </p>
{% else %}

  <p class="govuk-body">
    This trainee has the same details as <a href="{{otherTraineeUrl}}" class="govuk-link" rel="noreferrer noopener" target="_blank">{{record | getShortName}} (opens in a new tab)</a>.
  </p>

  <p class="govuk-body">
    You should withdraw one trainee. Email us if the trainee is not a duplicate.
  </p>

{% endif %}

